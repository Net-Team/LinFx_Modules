@using WebMvc.Services
@using WebMvc.ViewModels

@model WebMvc.ViewModels.Basket
@inject IIdentityParser<ApplicationUser> UserManager

@{
    ViewData["Title"] = "购物车";
}

<form method="post" id="cartForm">
    <div class="esh-basket">
        @await Html.PartialAsync("_Header", new List<Header>() { new Header() { Controller = "Catalog", Text = "Back to catalog" } })

        @await Component.InvokeAsync("CartList", new { user = UserManager.Parse(User) })
    </div>
</form>
