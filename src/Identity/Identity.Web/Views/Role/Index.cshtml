@model IEnumerable<ApplicationRole>
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "角色列表";
}

<h2>@ViewData["Title"]</h2>

@if ((await AuthorizationService.AuthorizeAsync(User, null, new PermissionAuthorizationRequirement(Permissions.User.Create))).Succeeded)
{
    <p>
        <a asp-action="Create">创建</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">编辑</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">详细</a> |
                    <a asp-action="Authorize" asp-route-id="@item.Id">权限</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>